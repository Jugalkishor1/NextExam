<!-- Quizzes Page -->
<div class="max-w-6xl mx-auto px-4 py-10 font-sans transition-colors duration-300 bg-gray-50 dark:bg-gray-900">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Practice Quizzes</h1>
    <p class="text-gray-600 dark:text-gray-400">Sharpen your skills with subject-wise practice quizzes</p>
  </div>

  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 mb-10 flex flex-wrap gap-6 items-center">
    
    <div class="flex flex-col gap-2">
      <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">Difficulty</span>
      <div class="flex flex-wrap gap-2">
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-indigo-600 text-white font-medium">All</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">Easy</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">Medium</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">Hard</button>
      </div>
    </div>

    <div class="flex flex-col gap-2">
      <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">Subject</span>
      <div class="flex flex-wrap gap-2">
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-indigo-600 text-white font-medium">All</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">Maths</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">English</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">Reasoning</button>
        <button class="px-4 py-2 text-sm border rounded-md transition-all border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:bg-indigo-600 hover:text-white text-gray-600 dark:text-gray-400">GK</button>
      </div>
    </div>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">

    <% if @quizzes.any? %>
      <% @quizzes.each do |quiz| %>
        <%= link_to quiz_path(quiz), class: "group bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 flex flex-col transition-all duration-300 hover:-translate-y-1 hover:shadow-lg relative overflow-hidden" do %>

          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-indigo-500 to-purple-600 scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-300"></div>

          <div class="flex justify-between items-start mb-3">
            <span class="px-3 py-1 rounded-full text-xs font-semibold uppercase 
              <%= case quiz.difficulty
                when 'easy' then 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900 dark:text-emerald-100'
                when 'medium' then 'bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-100'
                else 'bg-rose-100 text-rose-800 dark:bg-rose-900 dark:text-rose-100'
              end %>">
              <%= quiz.difficulty %>
            </span>
          </div>

          <span class="inline-flex items-center gap-1 text-indigo-600 dark:text-indigo-400 font-medium text-sm mb-2">
            <span class="w-1.5 h-1.5 bg-indigo-600 dark:bg-indigo-400 rounded-full"></span>
            <%= quiz.subject.name %>
          </span>

          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2"><%= quiz.title %></h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 flex-grow mb-4"><%= quiz.description %></p>

          <div class="border-t border-gray-100 dark:border-gray-700 pt-3 flex justify-between items-center">
            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
              <i class="fas fa-clock"></i>
              <span class="font-medium text-gray-700 dark:text-gray-300"><%= quiz.time_limit %> mins</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
              <i class="fas fa-question-circle"></i>
              <span class="font-medium text-gray-700 dark:text-gray-300"><%= quiz.questions.count %> Qs</span>
            </div>
          </div>

          <div class="mt-4">
            <% if attempt = quiz.quiz_attempt_for_user(current_user) %>
              <% if attempt.completed? %>
                <button onclick="event.preventDefault(); window.location.href='<%= solutions_user_quiz_attempt_path(attempt) %>'"
                  class="w-full py-2 rounded-lg bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white font-semibold text-sm transition-transform transform hover:scale-105">
                  View Result
                </button>
              <% else %>
                <button onclick="event.preventDefault(); window.location.href='<%= user_quiz_attempt_path(attempt) %>'"
                  class="w-full py-2 rounded-lg bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-semibold text-sm transition-transform transform hover:scale-105">
                  Continue Quiz
                </button>
              <% end %>
            <% else %>
              <button onclick="event.preventDefault(); window.location.href='<%= quiz_path(quiz) %>'"
                class="w-full py-2 rounded-lg bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-semibold text-sm transition-transform transform hover:scale-105">
                Start Quiz
              </button>
            <% end %>
          </div>
        <% end %>
      <% end %>

    <% else %>
      <div class="col-span-full text-center py-16 text-gray-600 dark:text-gray-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 mx-auto mb-3 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="text-lg font-semibold mb-1">No quizzes available</h3>
        <p>Check back later for new practice quizzes</p>
      </div>
    <% end %>
  </div>
</div>
