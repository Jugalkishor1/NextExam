<div class="max-w-5xl mx-auto px-4 py-10 font-sans text-gray-800 dark:text-gray-100 bg-gray-50 dark:bg-gray-900 transition-colors duration-300">

  <!-- Breadcrumb -->
  <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-6">
    <%= link_to "Quizzes", quizzes_path, class: "text-blue-600 dark:text-blue-400 hover:underline" %>
    <span>/</span>
    <span><%= @quiz.title %></span>
  </div>

  <!-- Quiz Hero -->
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl overflow-hidden mb-8">
    <div class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white p-8 relative">
      <div class="flex flex-wrap gap-2 mb-4">
        <span class="px-3 py-1 text-xs font-semibold uppercase rounded-full bg-white/20 backdrop-blur-md"><%= @quiz.subject.name %></span>
        <span class="px-3 py-1 text-xs font-semibold uppercase rounded-full bg-white/20 backdrop-blur-md"><%= @quiz.difficulty.capitalize %></span>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold mb-2"><%= @quiz.title %></h1>
      <p class="text-base md:text-lg opacity-90 leading-relaxed"><%= @quiz.description %></p>
    </div>

    <div class="p-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 mb-10">
        <% stats = [
          { label: "Questions", value: @quiz.questions.count, icon: "M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Time Limit", value: "#{@quiz.time_limit} mins", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Total Marks", value: @quiz.questions.sum(:marks).to_i, icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Difficulty", value: @quiz.difficulty.capitalize, icon: "M13 10V3L4 14h7v7l9-11h-7z" }
        ] %>
        <% stats.each do |s| %>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 flex items-center justify-center text-white rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= s[:icon] %>" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= s[:label] %></p>
              <p class="text-lg font-semibold"><%= s[:value] %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Action Section -->
      <div class="bg-gray-100 dark:bg-gray-700 rounded-xl p-6 text-center">
        <h2 class="text-xl font-semibold mb-2">Ready to begin?</h2>
        <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">
          You'll have <%= @quiz.time_limit %> minutes to complete all <%= @quiz.questions.count %> questions.
        </p>

        <% if attempt = @quiz.quiz_attempt_for_user(current_user) %>
          <% if attempt.completed? %>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
              <%= button_to "Reattempt", start_attempt_quiz_path(@quiz),
                  method: :post,
                  class: "bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-6 py-3 rounded-xl text-lg font-semibold shadow-md hover:shadow-lg hover:scale-105 transition",
                  data: { turbo: false, confirm: "Are you ready to start the quiz? Timer will begin immediately." } %>

              <button onclick="window.location.href='<%= solutions_user_quiz_attempt_path(attempt) %>'"
                class="bg-gradient-to-r from-green-400 to-emerald-600 text-white px-6 py-3 rounded-xl text-lg font-semibold shadow-md hover:shadow-lg hover:scale-105 transition">
                View Result
              </button>
            </div>
          <% else %>
            <%= button_to "Continue", user_quiz_attempt_path(@quiz),
                method: :post,
                class: "bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-6 py-3 rounded-xl text-lg font-semibold shadow-md hover:shadow-lg hover:scale-105 transition",
                data: { turbo: false, confirm: "Continue your quiz? Timer will resume immediately." } %>
          <% end %>
        <% else %>
          <%= button_to "Start Quiz Now", start_attempt_quiz_path(@quiz),
              method: :post,
              class: "bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-6 py-3 rounded-xl text-lg font-semibold shadow-md hover:shadow-lg hover:scale-105 transition",
              data: { turbo: false, confirm: "Are you ready to start the quiz? Timer will begin immediately." } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quiz Details -->
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 mb-8">
    <h2 class="flex items-center gap-2 text-xl font-semibold mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      Quiz Details
    </h2>

    <div class="flex flex-col gap-4">
      <div class="flex items-start gap-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <svg class="w-5 h-5 text-indigo-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <div>
          <p class="font-semibold">Subject</p>
          <p class="text-sm text-gray-600 dark:text-gray-300"><%= @quiz.subject.name %> - <%= @quiz.subject.description %></p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <svg class="w-5 h-5 text-indigo-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <div>
          <p class="font-semibold">Question Type</p>
          <p class="text-sm text-gray-600 dark:text-gray-300">Multiple Choice Questions (MCQ)</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <svg class="w-5 h-5 text-indigo-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <div>
          <p class="font-semibold">Scoring</p>
          <p class="text-sm text-gray-600 dark:text-gray-300">Each correct answer earns marks. Review after completion.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6">
    <h2 class="flex items-center gap-2 text-xl font-semibold mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      Instructions
    </h2>
    <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Read each question carefully.</li>
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Navigate between questions freely.</li>
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Mark questions for review.</li>
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Timer starts immediately after beginning.</li>
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Auto-submission when time ends.</li>
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Submit anytime before time runs out.</li>
      <li class="flex items-start gap-2"><span class="flex items-center justify-center w-5 h-5 rounded-full bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-200 text-xs font-bold">✓</span> Ensure stable internet connection.</li>
    </ul>
  </div>
</div>
