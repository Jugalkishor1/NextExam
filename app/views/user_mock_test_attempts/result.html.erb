<%
  total_questions = @attempt.mock_test.mock_test_questions.count
  correct_answers = @attempt.user_answers.where(is_correct: true).count
  wrong_answers = @attempt.user_answers.where(is_correct: false).where.not(option_id: nil).count
  unattempted = total_questions - @attempt.user_answers.where.not(option_id: nil).count
  percentage = @attempt.percentage_score
  
  performance_class = case percentage
    when 80..100 then { bg: 'bg-green-100 dark:bg-green-900/30', text: 'text-green-700 dark:text-green-300', emoji: 'ðŸŽ‰', label: 'Excellent!' }
    when 60...80 then { bg: 'bg-blue-100 dark:bg-blue-900/30', text: 'text-blue-700 dark:text-blue-300', emoji: 'ðŸ‘', label: 'Good Job!' }
    when 40...60 then { bg: 'bg-yellow-100 dark:bg-yellow-900/30', text: 'text-yellow-700 dark:text-yellow-300', emoji: 'ðŸ˜Š', label: 'Average' }
    else { bg: 'bg-red-100 dark:bg-red-900/30', text: 'text-red-700 dark:text-red-300', emoji: 'ðŸ’ª', label: 'Keep Practicing' }
  end
  
  total_marks = @attempt.mock_test.mock_test_questions.sum { |mtq| mtq.question.marks }
%>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-6 sm:py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Hero Card -->
    <div class="bg-gradient-to-br from-orange-500 via-red-500 to-pink-600 dark:from-orange-600 dark:via-red-600 dark:to-pink-700 rounded-2xl p-6 sm:p-10 text-white text-center mb-6 shadow-2xl relative overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -mr-32 -mt-32"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -ml-48 -mb-48"></div>
      
      <div class="relative z-10">
        <div class="w-20 h-20 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center text-5xl mx-auto mb-6">
          <%= percentage >= 60 ? 'ðŸŽ‰' : 'ðŸ“š' %>
        </div>
        
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3">Test Completed!</h1>
        <p class="text-lg sm:text-xl opacity-95 mb-4"><%= @attempt.mock_test.title %></p>
        
        <div class="inline-block px-6 py-3 <%= performance_class[:bg] %> <%= performance_class[:text] %> rounded-full font-bold text-lg backdrop-blur-sm">
          <%= performance_class[:emoji] %> <%= performance_class[:label] %>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mb-6">
      <!-- Score -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
        <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 dark:from-orange-600 dark:to-red-600 rounded-xl mb-4 mx-auto">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 text-center mb-2">Score</p>
        <p class="text-3xl font-bold text-gray-900 dark:text-white text-center"><%= percentage.round %>%</p>
        <p class="text-xs text-gray-500 dark:text-gray-500 text-center mt-1">
          <%= @attempt.score.to_f.round(1) %> / <%= total_marks.to_f.round(1) %> marks
        </p>
      </div>

      <!-- Correct Answers -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
        <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 dark:from-orange-600 dark:to-red-600 rounded-xl mb-4 mx-auto">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 text-center mb-2">Correct Answers</p>
        <p class="text-3xl font-bold text-gray-900 dark:text-white text-center"><%= correct_answers %></p>
        <p class="text-xs text-gray-500 dark:text-gray-500 text-center mt-1">out of <%= total_questions %></p>
      </div>

      <!-- Time Taken -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
        <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 dark:from-orange-600 dark:to-red-600 rounded-xl mb-4 mx-auto">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 text-center mb-2">Time Taken</p>
        <p class="text-3xl font-bold text-gray-900 dark:text-white text-center"><%= @attempt.time_taken %></p>
        <p class="text-xs text-gray-500 dark:text-gray-500 text-center mt-1">minutes</p>
      </div>
    </div>

    <!-- Detailed Analysis -->
    <div class="bg-white dark:bg-gray-800 rounded-xl p-6 sm:p-8 border border-gray-200 dark:border-gray-700 shadow-sm mb-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Detailed Analysis</h2>
      
      <div class="space-y-4">
        <div class="flex justify-between items-center pb-4 border-b border-gray-100 dark:border-gray-700">
          <span class="text-gray-600 dark:text-gray-400">Total Questions</span>
          <span class="font-semibold text-gray-900 dark:text-white"><%= total_questions %></span>
        </div>

        <div class="flex justify-between items-center pb-4 border-b border-gray-100 dark:border-gray-700">
          <span class="text-gray-600 dark:text-gray-400">Correct Answers</span>
          <span class="font-semibold text-green-600 dark:text-green-400"><%= correct_answers %></span>
        </div>

        <div class="flex justify-between items-center pb-4 border-b border-gray-100 dark:border-gray-700">
          <span class="text-gray-600 dark:text-gray-400">Wrong Answers</span>
          <span class="font-semibold text-red-600 dark:text-red-400"><%= wrong_answers %></span>
        </div>

        <div class="flex justify-between items-center pb-4 border-b border-gray-100 dark:border-gray-700">
          <span class="text-gray-600 dark:text-gray-400">Unattempted</span>
          <span class="font-semibold text-yellow-600 dark:text-yellow-400"><%= unattempted %></span>
        </div>

        <div class="pt-2">
          <div class="flex justify-between items-center mb-2">
            <span class="text-gray-600 dark:text-gray-400 font-medium">Accuracy Rate</span>
            <span class="font-bold text-gray-900 dark:text-white"><%= percentage.round %>%</span>
          </div>
          <div class="w-full h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-orange-500 to-red-500 dark:from-orange-600 dark:to-red-600 rounded-full transition-all duration-1000" 
                 style="width: <%= percentage %>%"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
      <%= link_to solutions_user_mock_test_attempt_path(@attempt), class: "flex-1 flex items-center justify-center gap-2 px-6 py-3.5 bg-gradient-to-r from-orange-600 to-red-600 dark:from-orange-500 dark:to-red-500 hover:from-orange-700 hover:to-red-700 text-white rounded-xl font-semibold transition-all shadow-lg hover:shadow-xl" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        View Solutions
      <% end %>

      <%= link_to my_attempts_mock_test_path(@attempt.mock_test), class: "flex-1 flex items-center justify-center gap-2 px-6 py-3.5 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-orange-500 dark:hover:border-orange-500 text-gray-700 dark:text-gray-300 hover:text-orange-600 dark:hover:text-orange-400 rounded-xl font-semibold transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        My Attempts
      <% end %>

      <%= link_to start_attempt_mock_test_path(@attempt.mock_test), method: :post, data: { turbo: false }, class: "flex-1 flex items-center justify-center gap-2 px-6 py-3.5 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-orange-500 dark:hover:border-orange-500 text-gray-700 dark:text-gray-300 hover:text-orange-600 dark:hover:text-orange-400 rounded-xl font-semibold transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Try Again
      <% end %>
    </div>

  </div>
</div>
