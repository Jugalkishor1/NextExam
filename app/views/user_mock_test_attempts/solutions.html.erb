<div class="bg-gray-100 dark:bg-gray-900 min-h-screen">
  <div class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50 shadow-sm">
    <div class="max-w-7xl mx-auto px-8 py-4">
      <div class="flex flex-row lg:flex-row justify-between items-stretch lg:items-center gap-4">
        <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
          <%= link_to "Mock Tests", mock_test_path, class: "text-indigo-600 hover:text-indigo-500 dark:text-indigo-400" %>
          <span>/</span>
          <%= link_to @mock_test.title, mock_test_path(@mock_test), class: "text-indigo-600 hover:text-indigo-500 dark:text-indigo-400" %>
          <span>/</span>
          <span class="font-medium text-slate-900 dark:text-gray-100">Review</span>
        </div>
        
        <div class="flex gap-2">
          <%= link_to my_attempts_mock_test_path(@mock_test), class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-semibold bg-white dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200 hover:border-purple-600 dark:hover:border-purple-400 hover:text-purple-600 dark:hover:text-purple-400 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            My Attempts
          <% end %>
          <%= button_to start_attempt_mock_test_path(@mock_test), method: :post, class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-semibold bg-gradient-to-br from-purple-600 to-purple-800 dark:from-purple-500 dark:to-purple-700 text-white shadow-lg shadow-purple-500/30 dark:shadow-purple-500/20 hover:-translate-y-0.5 hover:shadow-xl hover:shadow-purple-500/40 dark:hover:shadow-purple-500/30 transition-all", data: { turbo: false } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Retry Test
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%
    total_questions = @questions.count
    correct_count = @attempt.user_answers.where(is_correct: true).count
    wrong_count = @attempt.user_answers.where(is_correct: false).where.not(option_id: nil).count
    skipped_count = total_questions - @attempt.user_answers.where.not(option_id: nil).count
    percentage = @attempt.percentage_score
    
    performance_text = case percentage
      when 80..100 then 'üéâ Excellent!'
      when 60...80 then 'üëç Good Job!'
      when 40...60 then 'üòä Average'
      else 'üí™ Keep Practicing'
    end
  %>

  <!-- Main Layout -->
  <div class="max-w-7xl mx-auto p-8">
    <div class="grid grid-cols-1 lg:grid-cols-[350px_1fr] gap-8 items-start">
      
      <!-- Sidebar -->
      <div class="flex flex-col gap-6 lg:sticky lg:top-24">
        
        <!-- Score Card -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-sm">
          <div class="text-center p-6 bg-gradient-to-br from-purple-600 to-purple-800 dark:from-purple-500 dark:to-purple-700 rounded-xl text-white mb-6">
            <div class="text-sm opacity-90 mb-2">Your Score</div>
            <div class="text-6xl font-extrabold leading-none"><%= percentage.round %>%</div>
            <div class="inline-block mt-3 px-4 py-1.5 bg-white/20 rounded-full text-sm font-semibold">
              <%= performance_text %>
            </div>
          </div>

          <div class="flex flex-col gap-4">
            <div class="flex justify-between items-center py-3 border-b border-gray-100 dark:border-gray-700">
              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-lg bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 flex items-center justify-center text-lg">‚úì</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Correct</div>
              </div>
              <div class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= correct_count %></div>
            </div>

            <div class="flex justify-between items-center py-3 border-b border-gray-100 dark:border-gray-700">
              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-lg bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 flex items-center justify-center text-lg">‚úó</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Wrong</div>
              </div>
              <div class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= wrong_count %></div>
            </div>

            <div class="flex justify-between items-center py-3 border-b border-gray-100 dark:border-gray-700">
              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400 flex items-center justify-center text-lg">‚äù</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Skipped</div>
              </div>
              <div class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= skipped_count %></div>
            </div>

            <div class="flex justify-between items-center py-3">
              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-400 flex items-center justify-center">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Time</div>
              </div>
              <div class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= @attempt.time_taken %>m</div>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-sm">
          <h3 class="flex items-center gap-2 text-base font-bold text-gray-900 dark:text-gray-100 mb-5">
            <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
            Filter
          </h3>
          <div class="flex flex-wrap gap-2">
            <div class="filter-chip active px-4 py-2 rounded-full text-xs font-semibold cursor-pointer transition-all border-2 bg-purple-600 dark:bg-purple-500 border-purple-600 dark:border-purple-500 text-black dark:text-white" data-filter="all">
              All (<%= total_questions %>)
            </div>
            <div class="filter-chip px-4 py-2 rounded-full text-xs font-semibold cursor-pointer transition-all border-2 bg-green-100 dark:bg-green-900/30 border-green-500 dark:border-green-600 text-green-700 dark:text-green-400 hover:bg-green-500 hover:text-white dark:hover:bg-green-600" data-filter="correct">
              Correct (<%= correct_count %>)
            </div>
            <div class="filter-chip px-4 py-2 rounded-full text-xs font-semibold cursor-pointer transition-all border-2 bg-red-100 dark:bg-red-900/30 border-red-500 dark:border-red-600 text-red-700 dark:text-red-400 hover:bg-red-500 hover:text-white dark:hover:bg-red-600" data-filter="wrong">
              Wrong (<%= wrong_count %>)
            </div>
            <div class="filter-chip px-4 py-2 rounded-full text-xs font-semibold cursor-pointer transition-all border-2 bg-yellow-100 dark:bg-yellow-900/30 border-yellow-500 dark:border-yellow-600 text-yellow-700 dark:text-yellow-400 hover:bg-yellow-500 hover:text-white dark:hover:bg-yellow-600" data-filter="skipped">
              Skipped (<%= skipped_count %>)
            </div>
          </div>
        </div>

        <!-- Question Grid -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-sm">
          <h3 class="flex items-center gap-2 text-base font-bold text-gray-900 dark:text-gray-100 mb-5">
            <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
              </svg>
            Questions
          </h3>
          <div class="grid grid-cols-8 lg:grid-cols-8 gap-2" id="questionGrid"></div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="min-h-[70vh]">
        <% @questions.each_with_index do |question, index| %>
          <% 
            user_answer = @user_answers[question.id]
            user_option_id = user_answer&.option_id
            is_correct = user_answer&.is_correct
            is_skipped = user_option_id.nil?

            card_status = is_skipped ? 'skipped' : (is_correct ? 'correct' : 'wrong')
            status_text = is_skipped ? 'Not Attempted' : (is_correct ? 'Correct Answer' : 'Wrong Answer')
            status_icon = is_skipped ? '‚äù' : (is_correct ? '‚úì' : '‚úó')
            
            status_classes = {
              'correct' => 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400',
              'wrong' => 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400',
              'skipped' => 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400'
            }
          %>

          <div class="question-card hidden bg-white dark:bg-gray-800 rounded-2xl p-10 shadow-sm animate-fadeIn" data-index="<%= index %>" data-status="<%= card_status %>">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-semibold mb-6 <%= status_classes[card_status] %>">
              <%= status_icon %> <%= status_text %>
            </div>

            <div class="text-sm text-purple-600 dark:text-purple-400 font-bold mb-4">
              Question <%= index + 1 %> of <%= total_questions %>
            </div>
            
            <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100 leading-relaxed mb-8">
              <%= question.content %>
            </div>

            <div class="flex flex-col gap-4 mb-8">
              <% question.options.each do |option| %>
                <%
                  is_user_answer = option.id == user_option_id
                  is_correct_option = option.is_correct
                  
                  option_classes = if is_correct_option
                    'bg-green-100 dark:bg-green-900/30 border-green-500 dark:border-green-600'
                  elsif is_user_answer
                    'bg-red-100 dark:bg-red-900/30 border-red-500 dark:border-red-600'
                  else
                    'bg-gray-50 dark:bg-gray-700/50 border-gray-200 dark:border-gray-600'
                  end
                  
                  icon_classes = if is_correct_option
                    'bg-green-500 dark:bg-green-600 text-white'
                  elsif is_user_answer
                    'bg-red-500 dark:bg-red-600 text-white'
                  else
                    'bg-white dark:bg-gray-600 border-2 border-gray-300 dark:border-gray-500 text-gray-400 dark:text-gray-500'
                  end
                  
                  option_icon_text = is_correct_option ? '‚úì' : (is_user_answer ? '‚úó' : '‚óã')
                %>

                <div class="flex items-start gap-4 p-6 rounded-xl border-2 transition-all <%= option_classes %>">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 font-bold <%= icon_classes %>">
                    <%= option_icon_text %>
                  </div>
                  <div class="flex-1">
                    <div class="text-base text-gray-700 dark:text-gray-200 leading-relaxed mb-2">
                      <%= option.content %>
                    </div>
                    <% if is_correct_option %>
                      <span class="inline-block px-2.5 py-1 rounded bg-green-500 dark:bg-green-600 text-white text-xs font-bold uppercase tracking-wide">
                        Correct Answer
                      </span>
                    <% elsif is_user_answer %>
                      <span class="inline-block px-2.5 py-1 rounded bg-purple-600 dark:bg-purple-500 text-white text-xs font-bold uppercase tracking-wide">
                        Your Answer
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="bg-gray-50 dark:bg-gray-700/50 border-l-4 border-purple-600 dark:border-purple-500 rounded-lg p-6 mt-8">
              <div class="flex items-center gap-2 text-base font-bold text-gray-700 dark:text-gray-200 mb-3">
                <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
                Explanation
              </div>
              <div class="text-[15px] text-gray-600 dark:text-gray-300 leading-relaxed">
                The correct answer is "<strong><%= question.options.find_by(is_correct: true).content %></strong>".
                <% if is_correct %>
                  Great job! You selected the right answer.
                <% elsif is_skipped %>
                  You didn't attempt this question. Make sure to answer all questions in your next attempt.
                <% else %>
                  You selected "<%= question.options.find_by(id: user_option_id)&.content %>", which is incorrect. Review the correct answer to improve your understanding.
                <% end %>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row justify-between items-center mt-12 pt-8 border-t-2 border-gray-100 dark:border-gray-700 gap-4">
              <button class="nav-btn prev-btn w-full sm:w-auto flex items-center justify-center gap-2 px-8 py-3.5 rounded-xl font-semibold text-[15px] bg-gradient-to-br from-purple-600 to-purple-800 dark:from-purple-500 dark:to-purple-700 text-white shadow-lg shadow-purple-500/30 dark:shadow-purple-500/20 hover:-translate-y-0.5 hover:shadow-xl hover:shadow-purple-500/40 dark:hover:shadow-purple-500/30 transition-all disabled:opacity-40 disabled:cursor-not-allowed disabled:hover:translate-y-0" data-index="<%= index %>">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Previous
              </button>
              
              <span class="text-sm font-semibold text-gray-600 dark:text-gray-400">
                <%= index + 1 %> / <%= total_questions %>
              </span>
              
              <button class="nav-btn next-btn w-full sm:w-auto flex items-center justify-center gap-2 px-8 py-3.5 rounded-xl font-semibold text-[15px] bg-gradient-to-br from-purple-600 to-purple-800 dark:from-purple-500 dark:to-purple-700 text-white shadow-lg shadow-purple-500/30 dark:shadow-purple-500/20 hover:-translate-y-0.5 hover:shadow-xl hover:shadow-purple-500/40 dark:hover:shadow-purple-500/30 transition-all disabled:opacity-40 disabled:cursor-not-allowed disabled:hover:translate-y-0" data-index="<%= index %>">
                Next
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  const cards = document.querySelectorAll('.question-card');
  const grid = document.getElementById('questionGrid');
  const filterChips = document.querySelectorAll('.filter-chip');
  let currentIndex = 0;
  let filteredIndices = [];
  let currentFilter = 'all';

  // Initialize grid
  cards.forEach((card, i) => {
    const status = card.dataset.status;
    const statusClasses = {
      'correct': 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400',
      'wrong': 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400',
      'skipped': 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400'
    };
    
    const item = document.createElement('div');
    item.className = `grid-item aspect-square flex items-center justify-center rounded-lg text-sm font-semibold cursor-pointer transition-all border-2 border-transparent hover:opacity-80 hover:scale-105 ${statusClasses[status]}`;
    item.textContent = i + 1;
    item.dataset.index = i;
    item.onclick = () => showQuestion(i);
    grid.appendChild(item);
  });

  function updateFilteredIndices() {
    filteredIndices = Array.from(cards).map((c, i) => i).filter(i => {
      const status = cards[i].dataset.status;
      return currentFilter === 'all' || status === currentFilter;
    });
  }

  function showQuestion(index) {
    currentIndex = index;
    
    cards.forEach((c, i) => {
      if (i === index) {
        c.classList.remove('hidden');
        c.classList.add('block');
      } else {
        c.classList.add('hidden');
        c.classList.remove('block');
      }
    });

    grid.querySelectorAll('.grid-item').forEach((item, i) => {
      if (i === index) {
        item.classList.add('border-purple-600', 'dark:border-purple-400', 'scale-110', 'shadow-lg', 'shadow-purple-500/30', 'dark:shadow-purple-500/20');
      } else {
        item.classList.remove('border-purple-600', 'dark:border-purple-400', 'scale-110', 'shadow-lg', 'shadow-purple-500/30', 'dark:shadow-purple-500/20');
      }
    });

    const currentFilteredIndex = filteredIndices.indexOf(index);
    const prevBtn = cards[index].querySelector('.prev-btn');
    const nextBtn = cards[index].querySelector('.next-btn');
    
    prevBtn.disabled = currentFilteredIndex === 0;
    nextBtn.disabled = currentFilteredIndex === filteredIndices.length - 1;

    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // Navigation
  cards.forEach((card, index) => {
    card.querySelector('.prev-btn').onclick = () => {
      const currentPos = filteredIndices.indexOf(currentIndex);
      if (currentPos > 0) showQuestion(filteredIndices[currentPos - 1]);
    };

    card.querySelector('.next-btn').onclick = () => {
      const currentPos = filteredIndices.indexOf(currentIndex);
      if (currentPos < filteredIndices.length - 1) showQuestion(filteredIndices[currentPos + 1]);
    };
  });

  // Filters
  filterChips.forEach(chip => {
    chip.onclick = () => {
      filterChips.forEach(c => {
        c.classList.remove('active', 'bg-purple-600', 'dark:bg-purple-500', 'border-purple-600', 'dark:border-purple-500', 'text-white');
        
        const filter = c.dataset.filter;
        if (filter === 'correct') {
          c.classList.add('bg-green-100', 'dark:bg-green-900/30', 'border-green-500', 'dark:border-green-600', 'text-green-700', 'dark:text-green-400');
        } else if (filter === 'wrong') {
          c.classList.add('bg-red-100', 'dark:bg-red-900/30', 'border-red-500', 'dark:border-red-600', 'text-red-700', 'dark:text-red-400');
        } else if (filter === 'skipped') {
          c.classList.add('bg-yellow-100', 'dark:bg-yellow-900/30', 'border-yellow-500', 'dark:border-yellow-600', 'text-yellow-700', 'dark:text-yellow-400');
        } else {
          c.classList.add('bg-white', 'dark:bg-gray-700', 'border-gray-200', 'dark:border-gray-600', 'text-gray-600', 'dark:text-gray-400');
        }
      });
      
      chip.classList.add('active', 'bg-purple-600', 'dark:bg-purple-500', 'border-purple-600', 'dark:border-purple-500', 'text-white');
      chip.classList.remove('bg-green-100', 'dark:bg-green-900/30', 'border-green-500', 'dark:border-green-600', 'text-green-700', 'dark:text-green-400');
      chip.classList.remove('bg-red-100', 'dark:bg-red-900/30', 'border-red-500', 'dark:border-red-600', 'text-red-700', 'dark:text-red-400');
      chip.classList.remove('bg-yellow-100', 'dark:bg-yellow-900/30', 'border-yellow-500', 'dark:border-yellow-600', 'text-yellow-700', 'dark:text-yellow-400');
      chip.classList.remove('bg-white', 'dark:bg-gray-700', 'border-gray-200', 'dark:border-gray-600', 'text-gray-600', 'dark:text-gray-400');
      
      currentFilter = chip.dataset.filter;
      updateFilteredIndices();
      if (filteredIndices.length > 0) showQuestion(filteredIndices[0]);
    };
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    const currentPos = filteredIndices.indexOf(currentIndex);
    if (e.key === 'ArrowLeft' && currentPos > 0) {
      showQuestion(filteredIndices[currentPos - 1]);
    } else if (e.key === 'ArrowRight' && currentPos < filteredIndices.length - 1) {
      showQuestion(filteredIndices[currentPos + 1]);
    }
  });

  // Initialize
  updateFilteredIndices();
  showQuestion(0);
</script>
