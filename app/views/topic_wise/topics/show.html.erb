<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Breadcrumb -->
    <nav class="mb-10 text-sm">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to "Topic-wise", topic_wise_subjects_path, class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <%= link_to @topic.subject.name, topic_wise_subject_path(@topic.subject), class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 dark:text-gray-100 font-semibold"><%= @topic.name %></li>
      </ol>
    </nav>

    <!-- Topic Header -->
    <div class="bg-white/70 dark:bg-gray-800/70 backdrop-blur-md border border-gray-200 dark:border-gray-700 rounded-2xl shadow-md p-8 mb-10 transition">
      <div class="flex items-start justify-between flex-wrap gap-4">
        <div class="flex items-start">
          <div class="w-15 h-15 bg-indigo-100 dark:bg-indigo-900 rounded-xl flex items-center justify-center mr-4">
            <i class="fas fa-bookmark text-3xl text-indigo-600 dark:text-indigo-400"></i>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2"><%= @topic.name %></h1>
            <p class="text-gray-600 dark:text-gray-300 mb-4"><%= @topic.description %></p>
            <div class="flex flex-wrap items-center gap-6 text-sm">
              <span class="flex items-center text-indigo-600 dark:text-indigo-400 font-semibold gap-1">
                <i class="fas fa-book mr-2"></i> <%= @topic.subject.name %>
              </span>
              <span class="flex items-center text-gray-700 dark:text-gray-300 gap-1">
                <i class="fas fa-clipboard-list mr-2"></i> <%= @quizzes.count %> Quizzes
              </span>
              <span class="flex items-center text-gray-700 dark:text-gray-300 gap-1">
                <i class="fas fa-question-circle mr-2"></i> <%= @topic.questions_count %> Questions
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quizzes Section -->
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Available Quizzes</h2>
    </div>

    <% if @quizzes.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-3 xl:grid-cols-3 gap-6">
        <% @quizzes.each_with_index do |quiz, index| %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl hover:-translate-y-1 border border-gray-100 dark:border-gray-700 transition-all duration-300">
            <div class="p-6">
              <!-- Quiz Header -->
              <div class="flex items-start justify-between mb-4">
                <div>
                  <div class="flex items-center gap-2 mb-2">
                    <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900 text-indigo-700 dark:text-indigo-400 text-xs font-bold rounded-full">
                      Quiz <%= index + 1 %>
                    </span>
                    <span class="px-3 py-1 text-xs font-semibold rounded-full capitalize
                      <%= quiz.difficulty == 'easy' ? 'bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-400' : 
                          quiz.difficulty == 'medium' ? 'bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-400' : 
                          'bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-400' %>">
                      <%= quiz.difficulty %>
                    </span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2"><%= quiz.title %></h3>
                  <% if quiz.description.present? %>
                    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4"><%= quiz.description %></p>
                  <% end %>
                </div>
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-3 gap-4 py-4 border-t border-b border-gray-200 dark:border-gray-700">
                <div class="text-center">
                  <i class="fas fa-question-circle text-indigo-500 dark:text-indigo-400 mb-1"></i>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Questions</p>
                  <p class="text-lg font-bold text-gray-900 dark:text-white"><%= quiz.questions.count %></p>
                </div>
                <div class="text-center">
                  <i class="fas fa-clock text-green-500 dark:text-green-400 mb-1"></i>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Time</p>
                  <p class="text-lg font-bold text-gray-900 dark:text-white"><%= quiz.time_limit || 'N/A' %> min</p>
                </div>
                <div class="text-center">
                  <i class="fas fa-star text-yellow-500 dark:text-yellow-400 mb-1"></i>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Marks</p>
                  <p class="text-lg font-bold text-gray-900 dark:text-white"><%= quiz.questions.sum(:marks) %></p>
                </div>
              </div>

              <!-- Actions -->
              <div class="mt-6 flex gap-3">
                <%= link_to quiz_path(quiz), class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg text-center transition" do %>
                  <i class="fas fa-play mr-2"></i> Start Quiz
                <% end %>
                <%= link_to my_attempts_quiz_path(quiz), class: "p-3 border border-gray-200 dark:border-gray-700 hover:border-indigo-500 text-gray-700 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 rounded-lg transition" do %>
                  <i class="fas fa-history"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <i class="fas fa-inbox text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-600 dark:text-gray-300 mb-2">No quizzes available yet</h3>
        <p class="text-gray-500 dark:text-gray-400">Check back later for new quizzes on this topic!</p>
      </div>
    <% end %>
  </div>
</div>
