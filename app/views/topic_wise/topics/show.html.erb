<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li><%= link_to "Topic-wise", topic_wise_subjects_path, class: "text-indigo-600 hover:text-indigo-800" %></li>
        <li class="text-gray-400">/</li>
        <li><%= link_to @topic.subject.name, topic_wise_subject_path(@topic.subject), class: "text-indigo-600 hover:text-indigo-800" %></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-semibold"><%= @topic.name %></li>
      </ol>
    </nav>

    <!-- Topic Header -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <div class="flex items-start justify-between">
        <div class="flex items-start">
          <div class="w-16 h-16 bg-indigo-100 rounded-xl flex items-center justify-center mr-4">
            <i class="fas fa-bookmark text-3xl text-indigo-600"></i>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @topic.name %></h1>
            <p class="text-gray-600 mb-4"><%= @topic.description %></p>
            <div class="flex items-center gap-6 text-sm">
              <span class="flex items-center text-indigo-600 font-semibold">
                <i class="fas fa-book mr-2"></i>
                <%= @topic.subject.name %>
              </span>
              <span class="flex items-center text-gray-600">
                <i class="fas fa-clipboard-list mr-2"></i>
                <%= @quizzes.count %> Quizzes
              </span>
              <span class="flex items-center text-gray-600">
                <i class="fas fa-question-circle mr-2"></i>
                <%= @topic.questions_count %> Questions
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quizzes List -->
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Available Quizzes</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <% @quizzes.each_with_index do |quiz, index| %>
        <div class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-2 border-gray-100 hover:border-indigo-500">
          <div class="p-6">
            <!-- Quiz Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="px-3 py-1 bg-indigo-100 text-indigo-700 text-xs font-bold rounded-full">
                    Quiz <%= index + 1 %>
                  </span>
                  <span class="px-3 py-1 bg-<%= quiz.difficulty == 'easy' ? 'green' : quiz.difficulty == 'medium' ? 'yellow' : 'red' %>-100 text-<%= quiz.difficulty == 'easy' ? 'green' : quiz.difficulty == 'medium' ? 'yellow' : 'red' %>-700 text-xs font-semibold rounded-full capitalize">
                    <%= quiz.difficulty %>
                  </span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= quiz.title %></h3>
                <% if quiz.description.present? %>
                  <p class="text-gray-600 text-sm mb-4"><%= quiz.description %></p>
                <% end %>
              </div>
            </div>

            <!-- Quiz Stats -->
            <div class="grid grid-cols-3 gap-4 py-4 border-y border-gray-100">
              <div class="text-center">
                <i class="fas fa-question-circle text-indigo-500 mb-1"></i>
                <p class="text-xs text-gray-500">Questions</p>
                <p class="text-lg font-bold text-gray-900"><%= quiz.questions.count %></p>
              </div>
              <div class="text-center">
                <i class="fas fa-clock text-green-500 mb-1"></i>
                <p class="text-xs text-gray-500">Time</p>
                <p class="text-lg font-bold text-gray-900"><%= quiz.time_limit || 'N/A' %> min</p>
              </div>
              <div class="text-center">
                <i class="fas fa-star text-yellow-500 mb-1"></i>
                <p class="text-xs text-gray-500">Marks</p>
                <p class="text-lg font-bold text-gray-900"><%= quiz.questions.sum(:marks) %></p>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex gap-3">
              <%= link_to quiz_path(quiz), class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition text-center" do %>
                <i class="fas fa-play mr-2"></i>
                Start Quiz
              <% end %>
              <%= link_to my_attempts_quiz_path(quiz), class: "px-4 py-3 border-2 border-gray-200 hover:border-indigo-500 text-gray-700 hover:text-indigo-600 rounded-lg transition" do %>
                <i class="fas fa-history"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State -->
    <% if @quizzes.empty? %>
      <div class="text-center py-16">
        <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-600 mb-2">No quizzes available yet</h3>
        <p class="text-gray-500">Check back later for new quizzes on this topic!</p>
      </div>
    <% end %>
  </div>
</div>
