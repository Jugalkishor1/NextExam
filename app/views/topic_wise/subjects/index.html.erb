<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Topic-wise Quizzes</h1>
      <p class="text-lg text-gray-600">Master every topic with focused practice</p>
    </div>

    <!-- Subjects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @subjects.each do |subject| %>
        <%= link_to topic_wise_subject_path(subject), class: "group" do %>
          <div class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-2 border-gray-100 hover:border-indigo-500 overflow-hidden">
            <!-- Icon Header -->
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-8 text-center">
              <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-book text-4xl text-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-white"><%= subject.name %></h3>
            </div>
            
            <!-- Content -->
            <div class="p-6">
              <p class="text-gray-600 mb-4"><%= subject.description %></p>
              
              <div class="flex items-center justify-between text-sm">
                <span class="flex items-center text-indigo-600 font-semibold">
                  <i class="fas fa-layer-group mr-2"></i>
                  <%= subject.topics.count %> Topics
                </span>
                <span class="text-gray-500 group-hover:text-indigo-600 transition">
                  Explore <i class="fas fa-arrow-right ml-1"></i>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
