<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-gray-900 dark:text-gray-100">
    
    <!-- Breadcrumb -->
    <nav class="mb-10">
      <ol class="flex flex-wrap items-center gap-2 text-sm">
        <li>
          <%= link_to "Topic-wise", topic_wise_subjects_path, class: "text-indigo-600 dark:text-indigo-400 hover:underline font-medium" %>
        </li>
        <li class="text-gray-400">/</li>
        <li class="font-semibold text-gray-800 dark:text-gray-200"><%= @subject.name %></li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 dark:from-indigo-600 dark:to-purple-700 rounded-3xl shadow-xl overflow-hidden">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between p-10 md:p-12 gap-8 text-white">
        
        <!-- Left -->
        <div class="flex items-start md:items-center gap-6">
          <div class="w-20 h-20 bg-white/25 rounded-2xl flex items-center justify-center shadow-md">
            <i class="fas fa-book text-4xl"></i>
          </div>
          <div>
            <h1 class="text-4xl font-extrabold tracking-tight mb-2 leading-snug"><%= @subject.name %></h1>
            <p class="text-indigo-100/90 text-base sm:text-lg leading-relaxed max-w-xl">
              <%= @subject.description.presence || "Explore detailed topic-wise quizzes to master every concept step-by-step." %>
            </p>
          </div>
        </div>

        <!-- Right -->
        <div class="flex items-center gap-3 bg-white/20 px-6 py-3 rounded-2xl text-sm sm:text-base font-semibold shadow-md hover:bg-white/30 transition-all duration-300">
          <i class="fas fa-layer-group text-yellow-300 text-lg"></i>
          <span><%= @topics.count %> Topics Available</span>
        </div>
      </div>
    </div>

    <!-- Topics Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @topics.each do |topic| %>
        <%= link_to topic_wise_topic_path(topic), class: "group block" do %>
          <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl p-6 shadow-md hover:shadow-2xl hover:-translate-y-1 transition-all duration-300">
            
            <!-- Icon -->
            <div class="w-14 h-14 bg-indigo-100 dark:bg-indigo-900/40 rounded-xl flex items-center justify-center mb-5 group-hover:bg-indigo-500 dark:group-hover:bg-indigo-600 transition">
              <i class="fas fa-bookmark text-2xl text-indigo-600 dark:text-indigo-400 group-hover:text-white transition"></i>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition">
              <%= topic.name %>
            </h3>

            <!-- Description -->
            <% if topic.description.present? %>
              <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-6 line-clamp-2">
                <%= topic.description %>
              </p>
            <% end %>

            <!-- Stats -->
            <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700 text-sm text-gray-500 dark:text-gray-400">
              <span class="flex items-center gap-2">
                <i class="fas fa-clipboard-list text-indigo-500 dark:text-indigo-400"></i>
                <%= topic.quizzes.count %> Quizzes
              </span>
              <span class="flex items-center gap-2">
                <i class="fas fa-question-circle text-green-500 dark:text-green-400"></i>
                <%= topic.questions_count %> Questions
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
