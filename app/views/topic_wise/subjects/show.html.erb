<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li><%= link_to "Topic-wise", topic_wise_subjects_path, class: "text-indigo-600 hover:text-indigo-800" %></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-semibold"><%= @subject.name %></li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl p-8 mb-12 text-white">
      <div class="flex items-center mb-4">
        <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mr-4">
          <i class="fas fa-book text-3xl"></i>
        </div>
        <div>
          <h1 class="text-4xl font-bold mb-2"><%= @subject.name %></h1>
          <p class="text-indigo-100"><%= @subject.description %></p>
        </div>
      </div>
      <div class="flex items-center gap-6 mt-6">
        <span class="flex items-center">
          <i class="fas fa-layer-group mr-2"></i>
          <%= @topics.count %> Topics Available
        </span>
      </div>
    </div>

    <!-- Topics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @topics.each do |topic| %>
        <%= link_to topic_wise_topic_path(topic), class: "group" do %>
          <div class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-2 border-gray-100 hover:border-indigo-500 p-6">
            <!-- Topic Icon -->
            <div class="w-14 h-14 bg-indigo-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-indigo-500 transition">
              <i class="fas fa-bookmark text-2xl text-indigo-600 group-hover:text-white transition"></i>
            </div>
            
            <!-- Topic Name -->
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-indigo-600 transition">
              <%= topic.name %>
            </h3>
            
            <!-- Description -->
            <% if topic.description.present? %>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= topic.description %></p>
            <% end %>
            
            <!-- Stats -->
            <div class="flex items-center justify-between pt-4 border-t border-gray-100">
              <span class="flex items-center text-sm text-gray-500">
                <i class="fas fa-clipboard-list mr-2 text-indigo-500"></i>
                <%= topic.quizzes.count %> Quizzes
              </span>
              <span class="flex items-center text-sm text-gray-500">
                <i class="fas fa-question-circle mr-2 text-green-500"></i>
                <%= topic.questions_count %> Questions
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
