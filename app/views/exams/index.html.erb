<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 font-sans">
  <div class="mb-10 text-center">
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-2">
      Government Exams
    </h1>
    <p class="text-gray-600 dark:text-gray-400 text-sm sm:text-base">
      Select an exam to start practicing with quizzes, mock tests, and previous year papers
    </p>
  </div>

  <% if @exams.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @exams.each do |exam| %>
        <%= link_to exam_path(exam), class: "block bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl p-5 shadow-sm hover:shadow-lg hover:border-indigo-500 dark:hover:border-indigo-400 transition-all duration-300" do %>
          <span class="inline-block px-3 py-1 mb-3 text-xs font-semibold rounded-full bg-indigo-100 dark:bg-indigo-900/40 text-indigo-700 dark:text-indigo-300">
            <%= exam.exam_type %>
          </span>

          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
            <%= exam.name %>
          </h3>

          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
            <%= exam.description %>
          </p>

          <span class="<%= exam.status == 'draft' ? 'text-amber-500 before:bg-amber-500' : 'text-emerald-500 before:bg-emerald-500' %> relative pl-4 text-sm font-medium before:content-[''] before:w-2 before:h-2 before:rounded-full before:absolute before:left-0 before:top-1.5">
            <%= exam.status.capitalize %>
          </span>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 text-gray-500 dark:text-gray-400">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-14 h-14 mx-auto mb-4 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="text-lg font-semibold mb-2">No exams available</h3>
      <p>Check back later for new exams</p>
    </div>
  <% end %>
</div>
