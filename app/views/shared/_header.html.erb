<!-- Header -->
<header>
    <div class="container">
      <nav>
        <a href="<%= root_path %>" class="logo">
            <i class="fas fa-graduation-cap"></i>
            NextExam
        </a>

        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="<%= exams_path %>">Exams</a></li>
            <li><a href="#">Test Series</a></li>
            <li><a href="#">Quiz</a></li>
            <li><a href="#">PYQ</a></li>
        </ul>

        <div class="search-bar">
            <input type="text" placeholder="Search exams, materials...">
            <button><i class="fas fa-search"></i></button>
        </div>

        <div class="nav-actions">
          <% if user_signed_in? %>
            <button class="theme-toggle" onclick="toggleTheme()">
              <i class="fas fa-moon" id="theme-icon"></i>
            </button>
            <%= link_to 'Logout', destroy_user_session_path, class: 'btn btn-outline', data: { turbo_method: :delete } %>
          <% else %>
            <button class="theme-toggle" onclick="toggleTheme()">
              <i class="fas fa-moon" id="theme-icon"></i>
            </button>
            <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline' %>
            <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </nav>
    </div>
</header>