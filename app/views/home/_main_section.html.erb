            <i class="fas fa-file-alt text-3xl sm:text-4xl mb-4 opacity-90"></i>
            <h3 class="text-xl sm:text-2xl font-bold mb-3">Previous Year Papers</h3>
            <p class="text-white/90 mb-6 text-sm sm:text-base">Solve past exam papers to understand patterns</p>
            <div class="inline-flex items-center gap-2 text-sm font-semibold group-hover:gap-3 transition-all">
              Browse PYQs
              <i class="fas fa-arrow-right"></i>
            </div>
          </div>
        <% end %>

        <!-- Daily Quiz Card -->
        <%= link_to quizzes_path, class: "group" do %>
          <div class="bg-gradient-to-br from-green-500 to-emerald-600 dark:from-green-600 dark:to-emerald-700 rounded-2xl p-6 sm:p-8 text-white hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
