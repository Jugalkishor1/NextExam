  <!-- News Ticker -->
  <div class="bg-gradient-to-r from-red-500 via-orange-500 to-yellow-500 dark:from-red-700 dark:via-orange-700 dark:to-yellow-700 text-white py-3 overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3 sm:gap-4">
        <div class="flex-shrink-0 bg-white/20 backdrop-blur-sm px-3 sm:px-4 py-1.5 rounded-full text-xs sm:text-sm font-bold flex items-center gap-1">
          <i class="fas fa-bolt"></i> LIVE
        </div>
